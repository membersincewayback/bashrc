#!/usr/bin/env bash

pd() {
{    case "$1" in
        -[0-9]) popd +"${1//[!0-9]/}" || return ;;
        +[0-9]) pushd "$1" || return ;;
        -c) dirs -c ;;
        -) popd || return ;;
        *) pushd "$@" || return ;;
    esac
} > /dev/null
dirs -v
}

clean_history() {
	local hist="${HOME}/.bash_history"
	local hist_tmp="${HOME}/.hist.tmp"

	if [[ -f "$hist" ]]; then
		tac "$hist" | awk '{$1=$1}1 && !x[$0]++' | tac > "$hist_tmp"
		mv -f "$hist_tmp" "$hist"
	fi
}

extract() {
    case "$1" in
        *.tar.bz2) tar xjf "$1" ;;
        *.tar.gz) tar xzf "$1" ;;
        *.bz2) bunzip2 "$1" ;;
        *.rar) rar x "$1" ;;
        *.gz) gunzip "$1" ;;
        *.tar) tar xf "$1" ;;
        *.tbz2) tar xjf "$1" ;;
        *.tgz) tar xzf "$1" ;;
        *.zip) unzip "$1" ;;
        *.Z) uncompress "$1" ;;
        *.7z) 7z x "$1" ;;
        *) printf "%s cannot be extracted" "$1" ;;
    esac
}

checkmounts() {
    while IFS= read -r mount; do
        if ! findmnt "$mount" &> /dev/null; then
            printf "\033[31m%s is declared in fstab but not mounted\n\033[0m" "$mount"
        else
            printf "%s is mounted properly\n" "$mount"
        fi
    done < <(awk '!/^#/ && $2~/^[/]/ {print $2}' /etc/fstab)
}
